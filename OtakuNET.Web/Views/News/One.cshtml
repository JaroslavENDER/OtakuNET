@using OtakuNET.Web.Models.NewsViewModels
@model NewsOneViewModel
@{
    ViewData["Title"] = Model.News.Title;
}

<a asp-controller="News" asp-action="">
    <header class="section__header section__header--news">Лента новостей</header>
</a>

<section>
    @await Html.PartialAsync("/Views/NewsPartial/_OneNewsPartial.cshtml", Model.News)
</section>

<section class="title__section-comments">
    @await Component.InvokeAsync("Comments", new { contentType = "News", contentKey = Model.News.Key.ToString() })
</section>

@section Scripts {
    @await  Html.PartialAsync("_CommentsScriptsPartial")
}
