@using OtakuNET.Web.Models.AnimangaViewModels
@using OtakuNET.Web.Models.AnimeViewModels
@model AnimeListViewModel
@{
    ViewData["Title"] = "Аниме";
}


<a href="">
    <header class="section__header section__header--anime-list">Аниме</header>
</a>

<div class="flex__flex-container">

    <div class="flex__main-container">
        @foreach (var title in Model.Titles)
        {
            var model = new TitlePreviewPartialViewModel
            {
                ControllerName = "Anime",
                Title = title
            };
            await Html.RenderPartialAsync("/Views/AnimangaPartial/_TitlePreviewPartial.cshtml", model);
        }
    </div>

    <div class="flex__right-panel">

    </div>

</div>
